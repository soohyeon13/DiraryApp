            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tyczj.extendedcalendarview.ExtendedCalendarView
            android:id="@+id/calendar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>


    </LinearLayout>


</RelativeLayout>